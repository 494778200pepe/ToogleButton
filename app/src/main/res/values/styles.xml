<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <declare-styleable name="ToogleButton">
        <attr name="border_width" format="dimension"></attr>
        <attr name="border_color" format="color"></attr>
        <attr name="checked_bg_color" format="color"></attr>
        <attr name="unchecked_bg_color" format="color"></attr>
        <attr name="button_color" format="color"></attr>
        <attr name="button_ring_color" format="color"></attr>
        <attr name="button_ring_width" format="dimension"></attr>
        <attr name="button_offset" format="dimension"></attr>
        <attr name="button_radius_rate" format="float"></attr>
        <attr name="animation_duration" format="integer"></attr>
    </declare-styleable>

</resources>
